niveau_vie = 20
numero_adversaire=0
nombre_victoires=0
nombre_defaites=0

jouer = input('veux-tu faire une partie ?')

while jouer == "oui" :
    choix = int(input('Que voulez-vous faire ?\n'
                      '1- Combattre cet adversaire \n'
                      '2- Contourner cet adversaire et aller ouvrir une autre porte\n'
                      '3- Afficher les règles du jeu\n'
                      '4- Quitter la partie: '))
    if choix == 1 :
        numero_adversaire = numero_adversaire + 1
        de = random.randint(1, 6)
        force_adversaire = random.randint(1, 5)
        print('________________________\n'
              'Adversaire : %d\n'
              'Force de l’adversaire : %d\n'
              'Niveau de vie de l’usager : %d\n'
              'Nombre de victoires et de de defaites : %d victoire et %d défaite.\n'
              '_________________________' %
              (numero_adversaire, force_adversaire, niveau_vie,nombre_victoires, nombre_defaites))
        print('vous lancé le dé, vous avez besoin de faire plus que d%ds pour battre l ennemie'
              %(force_adversaire))
        if force_adversaire < de:
            nombre_victoires = nombre_victoires + 1
            niveau_vie = niveau_vie + force_adversaire
            print('bravo tu as gagné le combat')
        elif force_adversaire >= de:
            nombre_defaites = nombre_defaites + 1
            niveau_vie = niveau_vie - force_adversaire
            print('bravo tu as perdu le combat')
        #if choix =='2':
        #if choix =='3':

    jouer = input('veux-tu refaire une partie ?')

